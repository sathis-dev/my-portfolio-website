{
  "designSystemProfile": {
    "name": "Sathis Portfolio - Enhanced Design System v2.0",
    "version": "2.0",
    "inspiration": "ReactBits.dev refined aesthetic",
    "aesthetic": "Dark luxurious with fluid gradients, refined typography, and glass-morphism",
    "targetPlatforms": ["desktop", "mobile"],
    "designPhilosophy": "Sophisticated containment with organic color accents"
  },

  "colorPalette": {
    "backgrounds": {
      "pagePrimary": {
        "hex": "#0A0A0F",
        "usage": "Main page background - desktop only",
        "DO_NOT": "Never use for mobile backgrounds"
      },
      "pageSecondary": {
        "hex": "#12121A",
        "usage": "Section backgrounds, card containers"
      },
      "mobilePagePrimary": {
        "hex": "#1C1C28",
        "usage": "Mobile main background - lighter for visibility"
      },
      "mobilePageSecondary": {
        "hex": "#252535",
        "usage": "Mobile section backgrounds"
      },
      "headerDesktop": {
        "value": "rgba(10, 10, 15, 0.85)",
        "backdropFilter": "blur(20px) saturate(180%)",
        "usage": "Desktop header with glassmorphism"
      },
      "headerMobile": {
        "value": "rgba(28, 28, 40, 0.95)",
        "backdropFilter": "blur(16px) saturate(150%)",
        "usage": "Mobile header - slightly lighter for visibility"
      },
      "navPillContainer": {
        "value": "rgba(30, 30, 42, 0.9)",
        "border": "rgba(255, 255, 255, 0.08)",
        "usage": "Navigation pill container background"
      }
    },
    "accents": {
      "primaryPurple": "#A855F7",
      "primaryPurpleLight": "#C084FC",
      "secondaryPink": "#EC4899",
      "secondaryPinkLight": "#F472B6",
      "tertiaryCyan": "#06B6D4",
      "successGreen": "#10B981"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "rgba(255, 255, 255, 0.85)",
      "tertiary": "rgba(255, 255, 255, 0.6)",
      "muted": "rgba(255, 255, 255, 0.4)",
      "navDefault": "rgba(255, 255, 255, 0.7)",
      "navActive": "#FFFFFF"
    },
    "gradients": {
      "textGradientPrimary": "linear-gradient(135deg, #EC4899 0%, #A855F7 50%, #C084FC 100%)",
      "buttonPrimary": "linear-gradient(135deg, #A855F7 0%, #EC4899 100%)",
      "navActiveIndicator": "linear-gradient(90deg, #A855F7 0%, #EC4899 100%)"
    }
  },

  "spacing": {
    "headerHeight": { "desktop": "72px", "mobile": "64px" },
    "headerPadding": { "desktop": "0 48px", "mobile": "0 20px" },
    "navGap": { "desktop": "4px", "mobile": "4px" },
    "navItemPadding": { "desktop": "10px 18px", "mobile": "12px 20px" }
  },

  "borderRadius": {
    "small": "6px",
    "medium": "10px",
    "large": "14px",
    "pill": "50px",
    "button": "12px",
    "card": "16px"
  },

  "shadows": {
    "headerShadow": "0 4px 30px rgba(0, 0, 0, 0.3)",
    "navContainerShadow": "0 4px 20px rgba(0, 0, 0, 0.25), inset 0 1px 0 rgba(255, 255, 255, 0.05)",
    "buttonShadow": "0 4px 15px rgba(168, 85, 247, 0.3)",
    "buttonHoverShadow": "0 6px 25px rgba(168, 85, 247, 0.5)"
  },

  "DO_NOT_RULES": [
    "DO NOT apply hero aurora gradient to cards, buttons, or any non-background elements",
    "DO NOT use text gradient on body text or navigation items - only headings and feature numbers",
    "DO NOT apply button gradient to icon containers or badges",
    "DO NOT use pure white (#FFFFFF) for body text - use rgba(255,255,255,0.85)",
    "DO NOT apply glassmorphism backdrop-filter to cards - only header and modals",
    "DO NOT use large shadows on mobile - reduce shadow intensity by 40%"
  ]
}
