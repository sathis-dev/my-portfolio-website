{
  "designSystem": {
    "metadata": {
      "name": "Yasi0 Portfolio Design System",
      "theme": "Dark developer/tech portfolio",
      "colorScheme": "Dark mode with purple/blue accents",
      "designLanguage": "Minimal, code-inspired, terminal aesthetic"
    },
    
    "colorPalette": {
      "primary": {
        "purple": "#8B5CF6",
        "purpleLight": "#A78BFA",
        "purpleDark": "#6D28D9",
        "blue": "#3B82F6"
      },
      "backgrounds": {
        "primary": "#0F0F1E",
        "secondary": "#1A1A2E",
        "tertiary": "#16213E",
        "card": "rgba(26, 26, 46, 0.6)",
        "cardHover": "rgba(26, 26, 46, 0.8)"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#A0A0B8",
        "tertiary": "#6B6B8A",
        "accent": "#8B5CF6",
        "code": "#4ADE80",
        "link": "#60A5FA"
      },
      "borders": {
        "subtle": "rgba(139, 92, 246, 0.2)",
        "medium": "rgba(139, 92, 246, 0.4)",
        "accent": "#8B5CF6",
        "line": "rgba(107, 107, 138, 0.3)"
      },
      "functional": {
        "success": "#4ADE80",
        "warning": "#FBBF24",
        "error": "#EF4444",
        "info": "#3B82F6"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "code": "'Fira Code', 'JetBrains Mono', 'Courier New', monospace",
        "display": "'Space Grotesk', 'Poppins', sans-serif"
      },
      "fontSizes": {
        "hero": "4rem",
        "h1": "3rem",
        "h2": "2rem",
        "h3": "1.5rem",
        "body": "1rem",
        "small": "0.875rem",
        "tiny": "0.75rem"
      },
      "fontWeights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.75
      },
      "textApplications": {
        "heroName": {
          "fontSize": "4rem",
          "fontWeight": 700,
          "color": "#FFFFFF",
          "fontFamily": "display"
        },
        "heroAccent": {
          "fontSize": "4rem",
          "fontWeight": 700,
          "color": "#8B5CF6",
          "fontFamily": "display"
        },
        "heroSubtext": {
          "fontSize": "3rem",
          "fontWeight": 600,
          "color": "#FFFFFF",
          "fontFamily": "code"
        },
        "sectionHeader": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "color": "#A0A0B8",
          "fontFamily": "code",
          "textTransform": "none"
        },
        "projectTitle": {
          "fontSize": "1.5rem",
          "fontWeight": 600,
          "color": "#FFFFFF",
          "fontFamily": "primary"
        },
        "bodyText": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "color": "#A0A0B8",
          "fontFamily": "primary"
        },
        "codeText": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "color": "#4ADE80",
          "fontFamily": "code"
        }
      }
    },

    "elementStyling": {
      "navigationBar": {
        "background": "transparent",
        "backdropFilter": "blur(10px)",
        "border": "none",
        "padding": "1.5rem 3rem",
        "logo": {
          "text": {
            "color": "#FFFFFF",
            "fontSize": "1.5rem",
            "fontWeight": 700,
            "fontFamily": "code"
          },
          "brackets": {
            "color": "#8B5CF6"
          }
        },
        "navLinks": {
          "default": {
            "color": "#A0A0B8",
            "fontSize": "1rem",
            "fontWeight": 500,
            "textDecoration": "none"
          },
          "hover": {
            "color": "#FFFFFF"
          },
          "active": {
            "color": "#8B5CF6"
          },
          "codeSlash": {
            "color": "#8B5CF6",
            "display": "inline"
          }
        }
      },

      "heroSection": {
        "background": "#0F0F1E",
        "padding": "8rem 3rem",
        "textAlign": "left",
        "decorativeElements": {
          "verticalLine": {
            "width": "2px",
            "background": "linear-gradient(180deg, transparent 0%, #8B5CF6 50%, transparent 100%)",
            "height": "100%",
            "position": "left"
          },
          "cursor": {
            "display": "inline-block",
            "width": "2px",
            "height": "1em",
            "background": "#8B5CF6",
            "animation": "blink 1s infinite"
          }
        },
        "ctaText": {
          "color": "#A0A0B8",
          "fontSize": "1rem"
        }
      },

      "projectCards": {
        "container": {
          "background": "rgba(26, 26, 46, 0.4)",
          "backdropFilter": "blur(8px)",
          "border": "1px solid rgba(139, 92, 246, 0.2)",
          "borderRadius": "12px",
          "padding": "0",
          "overflow": "hidden",
          "transition": "all 0.3s ease"
        },
        "hover": {
          "background": "rgba(26, 26, 46, 0.6)",
          "border": "1px solid rgba(139, 92, 246, 0.4)",
          "transform": "translateY(-4px)",
          "boxShadow": "0 12px 32px rgba(139, 92, 246, 0.2)"
        },
        "image": {
          "width": "100%",
          "height": "auto",
          "objectFit": "cover",
          "display": "block"
        },
        "content": {
          "padding": "1.5rem",
          "background": "transparent"
        },
        "title": {
          "color": "#FFFFFF",
          "fontSize": "1.25rem",
          "fontWeight": 600,
          "marginBottom": "0.5rem"
        },
        "number": {
          "color": "#6B6B8A",
          "fontSize": "0.875rem",
          "fontFamily": "code",
          "marginBottom": "0.5rem"
        },
        "arrow": {
          "color": "#8B5CF6",
          "fontSize": "1rem"
        }
      },

      "buttons": {
        "primary": {
          "background": "#8B5CF6",
          "color": "#FFFFFF",
          "border": "none",
          "borderRadius": "8px",
          "padding": "0.875rem 2rem",
          "fontSize": "1rem",
          "fontWeight": 600,
          "cursor": "pointer",
          "transition": "all 0.3s ease",
          "hover": {
            "background": "#7C3AED",
            "transform": "translateY(-2px)",
            "boxShadow": "0 8px 20px rgba(139, 92, 246, 0.4)"
          },
          "active": {
            "transform": "translateY(0)",
            "boxShadow": "0 4px 12px rgba(139, 92, 246, 0.3)"
          }
        },
        "secondary": {
          "background": "transparent",
          "color": "#8B5CF6",
          "border": "2px solid #8B5CF6",
          "borderRadius": "8px",
          "padding": "0.875rem 2rem",
          "fontSize": "1rem",
          "fontWeight": 600,
          "cursor": "pointer",
          "transition": "all 0.3s ease",
          "hover": {
            "background": "rgba(139, 92, 246, 0.1)",
            "borderColor": "#A78BFA"
          }
        },
        "text": {
          "background": "transparent",
          "color": "#A0A0B8",
          "border": "none",
          "padding": "0.5rem 1rem",
          "fontSize": "1rem",
          "fontWeight": 500,
          "cursor": "pointer",
          "hover": {
            "color": "#FFFFFF"
          }
        }
      },

      "codeBlocks": {
        "container": {
          "background": "#0A0A14",
          "border": "1px solid rgba(139, 92, 246, 0.3)",
          "borderRadius": "8px",
          "padding": "1.5rem",
          "fontFamily": "code",
          "fontSize": "0.95rem",
          "lineHeight": 1.6
        },
        "lineNumbers": {
          "color": "#4B4B6B",
          "paddingRight": "1.5rem",
          "userSelect": "none"
        },
        "syntax": {
          "keyword": "#C792EA",
          "string": "#C3E88D",
          "number": "#F78C6C",
          "function": "#82AAFF",
          "comment": "#6B6B8A",
          "className": "#FFCB6B",
          "variable": "#89DDFF",
          "operator": "#89DDFF"
        },
        "terminal": {
          "prompt": {
            "color": "#8B5CF6",
            "symbol": "Î»>"
          },
          "command": {
            "color": "#FFFFFF"
          }
        }
      },

      "videoPlayer": {
        "container": {
          "background": "#000000",
          "borderRadius": "12px",
          "overflow": "hidden",
          "boxShadow": "0 8px 24px rgba(0, 0, 0, 0.5)"
        },
        "controls": {
          "background": "rgba(0, 0, 0, 0.8)",
          "backdropFilter": "blur(8px)",
          "padding": "0.75rem 1rem",
          "icons": {
            "color": "#FFFFFF",
            "hoverColor": "#8B5CF6"
          },
          "progressBar": {
            "background": "rgba(255, 255, 255, 0.2)",
            "fill": "#8B5CF6",
            "height": "4px",
            "borderRadius": "2px"
          }
        }
      },

      "links": {
        "default": {
          "color": "#A0A0B8",
          "textDecoration": "none",
          "transition": "color 0.2s ease"
        },
        "hover": {
          "color": "#8B5CF6",
          "textDecoration": "underline"
        },
        "code": {
          "color": "#60A5FA",
          "textDecoration": "none",
          "fontFamily": "code"
        }
      },

      "lists": {
        "container": {
          "listStyle": "none",
          "padding": 0
        },
        "item": {
          "color": "#A0A0B8",
          "fontSize": "1rem",
          "marginBottom": "0.75rem",
          "paddingLeft": "0"
        },
        "bullet": {
          "color": "#8B5CF6",
          "marginRight": "0.75rem",
          "display": "inline"
        }
      },

      "socialLinks": {
        "container": {
          "display": "flex",
          "gap": "1rem",
          "flexWrap": "wrap"
        },
        "link": {
          "display": "inline-flex",
          "alignItems": "center",
          "gap": "0.5rem",
          "color": "#A0A0B8",
          "textDecoration": "none",
          "transition": "all 0.2s ease",
          "hover": {
            "color": "#8B5CF6",
            "transform": "translateX(4px)"
          }
        },
        "icon": {
          "width": "20px",
          "height": "20px",
          "fill": "currentColor"
        },
        "platform": {
          "linkedin": "#0A66C2",
          "twitter": "#1DA1F2",
          "github": "#FFFFFF",
          "email": "#EA4335"
        }
      },

      "scrollIndicators": {
        "verticalLine": {
          "width": "2px",
          "background": "linear-gradient(180deg, transparent 0%, rgba(139, 92, 246, 0.5) 50%, transparent 100%)",
          "position": "fixed",
          "left": "2rem",
          "top": 0,
          "bottom": 0,
          "zIndex": 1
        },
        "sectionMarkers": {
          "width": "12px",
          "height": "12px",
          "borderRadius": "50%",
          "background": "transparent",
          "border": "2px solid #8B5CF6",
          "active": {
            "background": "#8B5CF6"
          }
        }
      }
    },

    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "section": "4rem",
      "container": "3rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 2px 8px rgba(0, 0, 0, 0.1)",
      "md": "0 4px 16px rgba(0, 0, 0, 0.15)",
      "lg": "0 8px 24px rgba(0, 0, 0, 0.2)",
      "xl": "0 12px 32px rgba(0, 0, 0, 0.25)",
      "accent": "0 8px 24px rgba(139, 92, 246, 0.3)",
      "accentHover": "0 12px 32px rgba(139, 92, 246, 0.4)"
    },

    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.3s ease",
        "slow": "0.5s ease"
      },
      "keyframes": {
        "fadeIn": {
          "from": { "opacity": 0 },
          "to": { "opacity": 1 }
        },
        "slideUp": {
          "from": { "transform": "translateY(20px)", "opacity": 0 },
          "to": { "transform": "translateY(0)", "opacity": 1 }
        },
        "blink": {
          "0%, 100%": { "opacity": 1 },
          "50%": { "opacity": 0 }
        }
      }
    },

    "layout": {
      "maxWidth": "1200px",
      "containerPadding": "3rem",
      "gridGap": "2rem",
      "sectionSpacing": "6rem"
    },

    "doNotRules": {
      "colors": [
        "DO NOT apply card background gradients to icons or buttons",
        "DO NOT use card border colors for text",
        "DO NOT apply purple accent color (#8B5CF6) to body text - use #A0A0B8 instead",
        "DO NOT use white (#FFFFFF) for all text - reserve for headings and primary content",
        "DO NOT apply backdrop-filter to elements without semi-transparent backgrounds"
      ],
      "spacing": [
        "DO NOT use inconsistent spacing between sections",
        "DO NOT apply card padding to images inside cards",
        "DO NOT use navigation padding for section containers"
      ],
      "typography": [
        "DO NOT use code font for body text - only for code, terminal, and technical labels",
        "DO NOT use display font for regular paragraphs",
        "DO NOT mix font weights arbitrarily - follow hierarchy"
      ],
      "effects": [
        "DO NOT apply hover transforms to static content",
        "DO NOT use card shadows on text elements",
        "DO NOT apply multiple conflicting transitions to same element",
        "DO NOT use accent shadows on non-interactive elements"
      ],
      "structure": [
        "DO NOT nest cards within cards without purpose",
        "DO NOT apply container max-width to full-width sections",
        "DO NOT use button styling for navigation links"
      ]
    },

    "componentPatterns": {
      "projectCard": {
        "structure": "Image at top, content padding below, no image padding",
        "imageHandling": "Full width, no border radius at top",
        "hoverBehavior": "Entire card lifts, border intensifies, shadow appears",
        "contentSpacing": "1.5rem padding on content area only"
      },
      "codeBlock": {
        "structure": "Dark container with syntax highlighting",
        "lineNumbers": "Left-aligned, dimmed color, non-selectable",
        "syntax": "Color-coded by token type, consistent scheme"
      },
      "navigation": {
        "structure": "Fixed top, transparent with blur, links right-aligned",
        "activeState": "Purple color, no background change",
        "codeSlashes": "Always purple, part of link structure"
      },
      "hero": {
        "structure": "Left-aligned, large text, vertical line decoration",
        "nameHighlight": "Purple color for name, white for rest",
        "emphasis": "Italics for 'design', monospace for 'develop'"
      }
    },

    "responsiveBreakpoints": {
      "mobile": "640px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px"
    }
  }
}